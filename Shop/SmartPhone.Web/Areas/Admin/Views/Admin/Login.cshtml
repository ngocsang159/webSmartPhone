@{
    Layout = "~/Areas/Admin/Views/Shared/_LayoutLogin.cshtml";
}
<div class="container">
    <div class="row">
        <div class="col-md-6">
            <div class="card">
                <div class="boxLogin">
                    <div class="panel-heading">
                 
                        <img src="~/css/images/avatar/logo.png" style="width:100%" />
                        <h4 class="text-note">Đăng nhập hệ thống</h4>
                    </div>
                    <form class="frm-login" id="formLogin" method="post">
                        <div class="form-group user" id="user-login">
                            <input type="text" name="username" id="username" placeholder="Email hoặc số điện thoại">
                        </div>
                        <div class="form-group pass">
                            <input type="password" name="password" placeholder="Mật khẩu" id="password">
                            <i class="fa fa-eye-slash" aria-hidden="true" id="eye"></i>
                        </div>

                        <div class="form-group">
                            <button type="submit" class="btn submit" id="btnLogin">Đăng nhập</button>
                        </div>
                        <div class="separator">
                            <div class="clearfix"></div>
                        </div>
                        <div class="clearfix"></div>
                        <br />
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
