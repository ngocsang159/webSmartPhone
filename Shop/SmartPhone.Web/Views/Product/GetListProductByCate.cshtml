@using SmartPhone.Services;
@using SmartPhone.Models.ViewModel;
@using SmartPhone.Models.EF;
@using System.Globalization;
@model SmartPhone.Models.EF.ResponseDataAdmin<SmartPhone.Models.EF.Product>;
@{
    ViewBag.pageNumber = Model.pageNumber;
    var pageSize = Model.pageSize;
}
@{
    CultureInfo culture = CultureInfo.GetCultureInfo("vi-VN");
}
<div class="row1 list-category" data-pagecount="@Model.pageCount" data-pagenumber="@Model.pageNumber">
    @foreach (var item in Model.data)
    {
        <div class="col-lg-3 col-md-3 col-sm-6 mt-40">
            <!-- single-product-wrap start -->
            <div class="single-product-wrap">
                <div class="product-image">
                    <a href="/san-pham/@item.Slug/@item.Id">
                        <img src="@item.Image" alt="Li's Product Image">
                    </a>
                    @if (item.OldNew == 1)
                    {
                        <span class="sticker">Mới</span>
                    }
                    else if (item.OldNew == 2)
                    {
                        <span class="sticker">99%</span>
                    }
                    else if (item.OldNew == 0)
                    {
                        <span class="sticker">Cũ</span>
                    }

                </div>
                <div class="product_desc">
                    <div class="product_desc_info">
                        <div class="product-review">
                            <h5 class="manufacturer">
                                <a href="/san-pham/@item.Slug/@item.Id">Graphic Corner</a>
                            </h5>
                            <div class="rating-box">
                                <ul class="rating">
                                    <li><i class="fa fa-star-o"></i></li>
                                    <li><i class="fa fa-star-o"></i></li>
                                    <li><i class="fa fa-star-o"></i></li>
                                    <li class="no-star"><i class="fa fa-star-o"></i></li>
                                    <li class="no-star"><i class="fa fa-star-o"></i></li>
                                </ul>
                            </div>
                        </div>
                        <div class="product_name"><a class="product_name_link" href="/san-pham/@item.Slug/@item.Id">@item.Name</a></div>
                        @if (item.PriceSale == 0)
                        {
                            <div class="price-box pt-10">
                                <span class="new-price new-price-2">
                                    @item.Price.Value.ToString("#,###", culture.NumberFormat)
                                    ₫
                                </span>
                            </div>

                        }
                        else
                        {
                            <div class="price-box pt-10">
                                <span class="new-price new-price-2">
                                    @item.PriceSale.Value.ToString("#,###", culture.NumberFormat)
                                    ₫
                                </span>
                                <span class="old-price">
                                    @item.Price.Value.ToString("#,###", culture.NumberFormat)
                                    ₫
                                </span>
                            </div>

                        }
                    </div>
                    <div class="add-actions">
                        <ul class="add-actions-link">
                            <li class="add-cart active"><a href="#" title="quick view" data-id="@item.Id" class="quick-view-btn" data-toggle="modal" data-target="#exampleModalCenter">Mua hàng</a></li>
                        </ul>
                    </div>
                </div>
            </div>
            <!-- single-product-wrap end -->
        </div>
    }
</div>


