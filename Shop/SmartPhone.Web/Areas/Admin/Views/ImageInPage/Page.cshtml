@model IEnumerable<SmartPhone.Models.EF.MasterDatum>;
@{
    ViewData["Title"] = "Quản lý hình ảnh trên trang";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="show-table">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">
                <div class="tableView">
                    <div class="row p-2">
                        <div class="col-md-12 p-0">
                            <div class="table-responsive">
                                <div class="data-table">
                                    <table id="myTable" class="table table-striped table-bordered text-left table-hover" style="background:#fff;">
                                        <thead>
                                            <tr>
                                                <th>Tiêu đề</th>
                                                <th>Thứ tự</th>
                                                <th>Trạng thái</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @foreach (var item in Model)
                                            {
                                                <tr>
                                                    <td>@item.Name</td>
                                                    <td>@item.Position</td>
                                                    <td style="width:120px">
                                                        <div class="d-flex justify-content-end w-100">
                                                            <button class="btn-info btn-event btnHref" data-id="@item.Id"><i class="fas fa-chevron-right"></i> </button>
                                                        </div>
                                                    </td>
                                                </tr>
                                            }
                                        </tbody>

                                        <tfoot>

                                        </tfoot>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
@section scripts{
    <script>
        $(document).ready(function () {
            hrefListNew();
            function hrefListNew() {
                $('.btnHref').click(function () {
                    let Id = $(this).attr('data-id');
                    location.href = "/Admin/ImageInPage/Index/" + Id;
                })
            }
        })
    </script>
}
