@* đón dữ liệu từ controller*@
@model IEnumerable<SmartPhone.Models.ViewModel.OrderDetailView>

<style>
    table th:nth-child(4), table td:nth-child(4) {
        width: 120px;
    }

    table th:nth-child(6), table td:nth-child(6) {
        width: 150px;
    }

    table th:nth-child(5), table td:nth-child(5) {
        width: 120px;
    }
</style>



<div class="data-table">
    <table id="myTable" class="table table-striped table-bordered text-left table-hover" style="background:#fff;">
        <thead>
            <tr>
                <th>Mã sản phẩm</th>
                <th>Màu sắc</th>
                <th>Số lượng</th>
                <th>Giá</th>
                @*<th>Tiền ship</th>
                <th>Tổng tiền</th>*@
                <th>Tác vụ</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.product.Code</td>
                    <td>@item.color.Name</td>
                    <td>@item.orderDetail.Quantity</td>
                    <td>@item.orderDetail.Price</td>
                    @*<td>@item.orderDetail.PriceShip</td>
                    <td>@item.orderDetail.TotalPrice</td>*@
                    <td style="width:120px">
                        <div class="d-flex justify-content-end w-100">
                            @*<button class="btn-info btn-event btnHref" data-id="@item.orderDetail.Id"><i class="fas fa-chevron-right"></i> </button>*@
                            <button class="btn-green btn-event btnDetail" data-id="@item.orderDetail.Id"><i class="fas fa-info-circle"></i> </button>
                            <button class="btn-yellow btn-event btnEdit" data-id="@item.orderDetail.Id"><i class="far fa-edit"></i> </button>
                            <button class="btn-red btn-event btnDelete" role="button" data-id="@item.orderDetail.Id"><i class="far fa-trash-alt"></i> </button>
                        </div>
                    </td>
                </tr>
            }

        </tbody>

        <tfoot>

        </tfoot>
    </table>

</div>